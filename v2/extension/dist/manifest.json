{
  "manifest_version": 3,
  "name": "VideoWithYou v2",
  "version": "0.1.0",
  "description": "VideoWithYou 同步看视频 (本地客户端桥接)",
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "sw.js",
    "type": "module"
  },
  "permissions": ["tabs", "scripting", "storage"],
  "host_permissions": ["*://*/*", "file://*/*", "ws://127.0.0.1/*"],
  "content_scripts": [
    {
      "matches": ["*://*/*", "file://*/*"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "type": "module"
    }
  ]
}
